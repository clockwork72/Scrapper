{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["statements", "nonextractable_notes"],
  "properties": {
    "statements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["statement_id", "text", "text_span", "operations"],
        "properties": {
          "statement_id": { "type": "string" },
          "text": { "type": "string" },
          "text_span": {
            "type": "object",
            "additionalProperties": false,
            "required": ["policy_id", "section_id", "section_path", "start_char", "end_char", "quote"],
            "properties": {
              "policy_id": { "type": "string" },
              "section_id": { "type": "string" },
              "section_path": { "type": "string" },
              "start_char": { "type": "integer" },
              "end_char": { "type": "integer" },
              "quote": { "type": "string" }
            }
          },
          "operations": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["op_id", "evidence_spans"],
              "properties": {
                "op_id": { "type": "string" },
                "action": { "$ref": "#/definitions/labeledFieldOrNull" },
                "subject": { "$ref": "#/definitions/labeledFieldOrNull" },
                "view": { "$ref": "#/definitions/labeledFieldOrNull" },
                "purposes": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/labeledField" }
                },
                "recipient": { "$ref": "#/definitions/labeledFieldOrNull" },
                "source": { "$ref": "#/definitions/labeledFieldOrNull" },
                "legal_basis": { "$ref": "#/definitions/labeledFieldOrNull" },
                "manner": { "$ref": "#/definitions/labeledFieldOrNull" },
                "temporal": { "$ref": "#/definitions/labeledFieldOrNull" },
                "localisation": { "$ref": "#/definitions/labeledFieldOrNull" },
                "evidence_spans": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["policy_id", "section_id", "section_path", "start_char", "end_char", "quote"],
                    "properties": {
                      "policy_id": { "type": "string" },
                      "section_id": { "type": "string" },
                      "section_path": { "type": "string" },
                      "start_char": { "type": "integer" },
                      "end_char": { "type": "integer" },
                      "quote": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "nonextractable_notes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "definitions": {
    "labeledField": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "evidence"],
      "properties": {
        "label": { "type": "string" },
        "evidence": { "type": ["string", "null"] }
      }
    },
    "labeledFieldOrNull": {
      "oneOf": [
        { "$ref": "#/definitions/labeledField" },
        { "type": "null" }
      ]
    }
  }
}
